<div class="home-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
        <div class="home-description">
          <h1 class="text-center">WALK</h1>
          <h3 class="text-center">Construisez votre visite en un click</h3>

          <div class="container-flex">

            <form class="form-container" action="<%= search_city_path %>" method="post">
              <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
              <div class="autocomplete">
                <div class="form-group">
                  <input type="text" name="name" placeholder="Entrez votre ville" id="myInput" class="form-control">
                </div>
                <button type="submit" name="button" class="button-icon"><i class="fas fa-search"></i></button>
              </div>
            </form>


          </div>

        </div>
      </div>
    </div>
  </div>
</div>



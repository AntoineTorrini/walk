
<div class="wrapper-explications">
  <div class="container explics">
    <div class="row">
      <div class="col-xs-10 col-sm-8 col-xs-offset-1 col-sm-offset-2">
        <div class="content-explications">

        <div class="row">
          <div class="col-xs-12 col-sm-12">
            <div class="text-explications">
              <h3>Construisez votre visite sur mesure à Lille!</h3>
              <p>Selectionnez les monuments que vous voulez ajouter à votre parcours.</p>
            </div>
          </div>
        </div>


        <div class="row">
          <div class="col-xs-8 col-sm-8 col-xs-offset-2 col-sm-offset-2">
            <div class="card">
              <h1>CARDS</h1>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-xs-8 col-xs-offset-2">
            <div class="position-valid-button">

              <div class="validate validate-no">
                <%= image_tag "close.svg" %>
              </div>

              <div class="validate validate-yes">
                <%= image_tag "check.svg" %>
              </div>

            </div>
          </div>
        </div>



          <div class="row">
            <div class="col-xs-6 col-sm-4 col-xs-offset-3 col-sm-offset-4">

              <%= link_to post_city_path(@city), method: :post do %>
                <%= render "shared/button", calltoaction: "C'est parti!" %>
              <% end  %>

              <%= link_to "Test", post_city_path(@city) %>
          </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>
